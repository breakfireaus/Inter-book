<h1> Dashboard </h1>
<section id="current-services">

    {{#each services as |service|}}
    <div class="card" id="services">
        <a href="/services/{{id}} " class="card-body">
            <h3 class="card-title"> {{title}} - {{id}}</h3>
        </a>
    </div>
    {{/each}}

</section>

<section id="addService" class="card text-center">
    <div class="card-body">
        <h3 class="card-title">Add New Service</h3>
        <form id="service-form">
            <div class="card-text"></div>
                <label for="title"> Service Title </label><br>
                <input type="text" id="service-title" placeholder="Service Title">
            </div>
            <div class="card-text"></div>
                <label for="industry"> Industry </label>
            <input id="industry"></input>
            </div>
            <div class="card-text"></div>
                <label for="description"> Description </label>
            <textarea id="description"></textarea>
            </div>
            <div class="card-text"></div>
                <label for="start"> Session Start </label>
            <input id="start"></input>
            </div>
            <div class="card-text"></div>
                <label for="end"> Session End </label>
            <input id="end"></input>
            </div>
            <div class="card-text"></div>
                <label for="hourly-rate"> Hourly Rate </label>
            <input id="hourly-rate"></input>
            </div>
            <div class="card-text"></div>
                <label for="max-bookings"> Max Bookings </label>
            <input id="max-bookings"></input>
            </div>
            <button id="addBtn"> Add </button>
        </form>
    </div>
</section>

<form id="post-service">
    <button type="submit">+ New Service</button>
</form>

