<main>
        <section class="vh-100" style="background-color: lightblue;">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col col-xl-10">
                        <div class="card" style="border-radius: 1rem;">
                            <div class="row g-0">
                                <div class="col-md-6 col-lg-5 d-none d-md-block">
                                    <img src="/public/images/logo-color.png" alt="login form" class="img-fluid"
                                        style="border-radius: 1rem 0 0 1rem;" />
                                </div>
                                <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                    <div class="card-body p-4 p-lg-5 text-black">
                                        <h5> Sign into your account</h5>

                                        <form class='signin-form'>
                                            <div class="form-outline mb-4">
                                                <input type="email" id="email-signin"
                                                    class="form-control form-control-lg" />
                                                <label class="form-label" for="email-login">Email address</label>
                                            </div>

                                            <div class="form-outline mb-4">
                                                <input type="password" id="password-signin"
                                                    class="form-control form-control-lg" />
                                                <label class="form-label" for="password-signin">Password</label>
                                            </div>

                                            <div class="pt-1 mb-4">
                                                <button class="btn btn-dark btn-lg btn-block"
                                                    type="button">Login</button>
                                            </div>

                                            <a class="small text-muted" href="#!">Forgot password?</a>
                                            <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a
                                                    href="#!" style="color: #393f81;">Register
                                                    here</a></p>
                                        </form>

                                        <!-- Sign in script link-->

                                        <script src="/public/js/signin.js"> </script>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>